version: '3'
services:
  api-beta:
    build: .
    environment:
      - OPEN5E_DEBUG=False
      - 'SECRET_KEY=${SECRET_KEY}'
      - 'SERVER_NAME=${SERVER_NAME}'
    ports:
      - '8000:8000'
    depends_on:
      - nginx
  nginx:
    image: 'nginx:latest'
    environment:
      - NGINX_HOST=open5e.com
      - NGINX_PORT=443
    volumes:
      - './nginx/api/:/etc/nginx/:ro'
    ports:
      - '0.0.0.0:80:80'
      - '0.0.0.0:443:443'
  dev:
    build: .
    depends_on:
      - nginx
    environment:
      - OPEN5E_DEBUG=True
      - 'SECRET_KEY=a_secret'
      - 'SERVER_NAME=localhost'
    ports:
      - '8000:8000'
